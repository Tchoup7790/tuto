<h1 class="text-5xl font-extrabold"><span class="px-2 text-white bg-blue-600 rounded">Rails</span> Blog</h1>
<p class="font-bold py-5">Our blog has <%= @articles.length %> articles!</p>
<div class="flex w-full h-fit flex-1 gap-10">
    <aside class="w-1/4 flex h-fit p-5 border-solid border-2 border-grey flex-col gap-4 rounded-lg">
        <div class="h-fit flex justify-start flex-col gap-5">
          <h4 class="text-1xl font-semibold" >Categories:</h4>
          <% @categories.each do |category| %>
              <%= link_to category.name, category, class:"text-sm leading-6 text-gray-900 hover:underline decoration-blue-500 cursor-pointer" %>
          <% end %>
        </div>
        <div data-controller="categories" class="flex flex-col">
          <button data-action="click->categories#show" class="w-full text-start text-sm font-semibold text-blue-500 cursor-pointer">toggle category form</button>
          <div data-categories-target="category" class="hidden w-full flex-col gap-3">
            <%= render 'categories/form' %>
          </div>
        </div>
    </aside>
    <ul class="flex flex-col flex-1 pl-4 gap-5">
        <% @articles.each do |article| %>
            <% unless article.archived? %>
                <li class="w-full font-semibold hover:text-white hover:bg-blue-500 rounded underline underline-offset-3 decoration-4 decoration-blue-500 cursor-pointer">
                    <%= link_to article.title, article, class:"py-3 px-5 flex w-full h-full text-xl" %>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>
